<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.lddi</groupId>
    <artifactId>lddi.pom</artifactId>
    <version>3.0.0</version>
    <relativePath>../../lddi.pom</relativePath>
  </parent>
  <artifactId>lddi.pom.config</artifactId>
  <version>3.0.0</version>
  <packaging>pom</packaging>
  <name>universAAL LDDI Suite (Config)</name>
  <description>The set of artefacts realizing the universAAL Local Device Discovery and Integration (Configuration)</description>
  <modules>
    <module>../lddi.knx.devicemanager.config</module>
	<module>../lddi.knx.networkdriver.config</module>
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.universAAL.lddi</groupId>
        <artifactId>lddi.knx.devicemanager.config</artifactId>
      <type>cfg</type>
        <version>3.0.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.lddi</groupId>
        <artifactId>lddi.knx.networkdriver.config</artifactId>
      <type>cfg</type>
        <version>3.0.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.universAAL.support</groupId>
        <artifactId>uaal-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>CompositeMojo</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>TestMojo</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-composite</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
