<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>lddi.pom</artifactId>
		<groupId>org.universAAL.lddi</groupId>
		<version>1.3.1-SNAPSHOT</version>
	</parent>
	<artifactId>lddi.continuahdpmanager.caller.test</artifactId>
	<version>1.3.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<name>universAAL LDDI Continua Manager service caller test</name>
	<description>Caller test to request Continua Health Alliance manager services</description>
	<organization>
		<name>TSB Technologies for Health and Well-being</name>
		<url>www.tsbtecnologias.es</url>
	</organization>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<!-- this version is managed by the parent pom -->
				<!-- 				<version>2.3.7</version> -->
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.continua.caller.test.main.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Include-Resource>
							src/main/resources
						</Include-Resource>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>uAAL-Runtime</id>
			<dependencies>
				<dependency>
					<groupId>org.universAAL.middleware</groupId>
					<artifactId>mw.data.serialization.osgi</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<!-- this version is managed by the parent pom -->
			<!-- 			<version>1.4.0</version> -->
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
			<!-- this version is managed by the parent pom -->
			<!-- 		<version>1.2.0</version> -->
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.personalhealthdevice</artifactId>
			<version>1.3.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.continuahealthmanager</artifactId>
			<version>1.3.1-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>