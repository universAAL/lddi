<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>lddi.pom</artifactId>
		<groupId>org.universAAL.lddi</groupId>
		<version>1.1.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
  <groupId>org.universAAL.continua</groupId>
  <artifactId>weighingScalePublisher</artifactId>
  <version>1.0.0</version>
  <packaging>bundle</packaging>
  <name>Weighing scale agent publisher</name>
  <description>Continua Health Alliance agent event publisher</description>
  <organization>
  	<name>TSB Technologies for Health and Well-being</name>
  	<url>www.tsbtecnologias.es</url>
  </organization>
  <build>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.felix</groupId>
  			<artifactId>maven-bundle-plugin</artifactId>
  			<version>2.3.7</version>
  			<extensions>true</extensions>
  			<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.continua.weighingscale.publisher.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
					</instructions>
				</configuration>
  		</plugin>
  	</plugins>
  </build>
  <dependencies>
	<dependency>
		<groupId>org.universAAL.continua</groupId>
		<artifactId>ieee.x73.std</artifactId>
		<version>1.1.0</version>
	</dependency>
	<dependency>
		<groupId>org.apache.felix</groupId>
		<artifactId>org.osgi.core</artifactId>
		<version>1.4.0</version>
	</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.context</artifactId>
			<version>1.1.0</version>
		</dependency>		
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>org.universAAL.ontology.x73</artifactId>
			<version>0.1</version>
		</dependency>
		</dependencies>
</project>